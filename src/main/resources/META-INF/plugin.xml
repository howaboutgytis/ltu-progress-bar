<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.ltu.progress.bar.LTUProgressBar</id>
    <name>LTU Progress Bar</name>
    <vendor url="https://github.com/howaboutgytis/ltu-progress-bar">Gytis De≈°ukas</vendor>

    <description><![CDATA[
For LTU devs whose hearts beat stronger.
<p>A custom progress bar plugin for IntelliJ IDEA 2024.3+</p>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="appearance"
                                 instance="com.ltu.progressbar.settings.LtuProgressBarConfigurable"
                                 id="org.intellij.sdk.settings.AppSettingsConfigurable"
                                 dynamic="true"
                                 displayName="LTU Progress Bar"/>
    </extensions>

    <applicationListeners>
        <listener class="com.ltu.progressbar.listener.LtuProgressBarListener"
                  topic="com.intellij.ide.ui.LafManagerListener"/>
        <listener class="com.ltu.progressbar.listener.LtuProgressBarListener"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
</idea-plugin>
